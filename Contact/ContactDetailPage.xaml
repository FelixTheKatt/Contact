<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contact.ContactDetailPage"
             Title="Détails du contact">

    <ScrollView>
        <VerticalStackLayout Padding="20" 
                             Spacing="15" 
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             WidthRequest="300">
            <Label Text="Détails du contact" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
            <BoxView HeightRequest="2"
                     WidthRequest="200"
                     BackgroundColor="#2A4365"
                     HorizontalOptions="Center" />  

            <Label Text="Prénom :" FontAttributes="Bold" />
            <Label x:Name="FirstNameLabel" />

            <Label Text="Nom :" FontAttributes="Bold" />
            <Label x:Name="LastNameLabel" />

            <Label Text="Email :" FontAttributes="Bold" />
            <Label x:Name="EmailLabel" />

            <Label Text="Téléphone :" FontAttributes="Bold" />
            <Label x:Name="PhoneLabel" />

            <Label Text="Adresse :" FontAttributes="Bold" />
            <Label x:Name="AddressLabel" />

            <Button Text="Fermer"
                    Clicked="OnCloseClicked"
                    BackgroundColor="#2A4365"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="150"
                    Margin="0,20,0,0"/> 
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>